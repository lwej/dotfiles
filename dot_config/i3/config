bar {
    position top
    font pango:monospace 10
    separator_symbol " \ "
    status_command i3status
    colors {
            background #152528
            statusline #E6EAEA
            separator  #FDB292
            focused_workspace  #7AA4A1 #152528 #EEEEEE
            active_workspace   #152528 #152528 #EEEEEE
            inactive_workspace #152528 #152528 #7AA4A1
            urgent_workspace   #2F343A #FDA47F #2F3239
